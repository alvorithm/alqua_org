\layout Standard


\begin_inset Formula \begin{eqnarray*}
\mathbf{D} & = & \mathbf{D}_{0}e^{i\fase}\\
\mathbf{H} & = & \mathbf{H}_{0}e^{i\fase}\\
\mathbf{E} & = & \mathbf{E}_{0}e^{i\fase}\end{eqnarray*}

\end_inset 

 con 
\begin_inset Formula $\mathbf{D}_{0},\mathbf{H}_{0},\mathbf{E}_{0}\in\mathcal{C}$
\end_inset 

