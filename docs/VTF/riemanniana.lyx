\begin_inset Formula \begin{eqnarray*}
\ddt{x^{\mu}}+\Gamma_{\nu\lambda}^{\mu}\dt{x^{\mu}}\dt{x^{\lambda}} & = & 0\\
\textrm{con}\quad x^{\mu}\left[0\right] & = & c^{\mu}\\
\textrm{y }\quad\dt{x^{\mu}}\left[0\right] & = & v^{\mu}\end{eqnarray*}

\end_inset 

